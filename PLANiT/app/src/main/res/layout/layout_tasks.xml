<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_indicator"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="@dimen/task_indicator_marginLeft"
            android:layout_marginLeft="@dimen/task_indicator_marginLeft"
            android:layout_marginTop="@dimen/task_indicator_marginTop"
            app:showAnimationBehavior="inward"
            app:trackColor="@color/custom_secondary_variant"
            app:indicatorSize="@dimen/task_indicator_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/task_indicator"
            android:layout_alignBottom="@id/task_indicator"
            android:layout_alignRight="@id/task_indicator"
            android:layout_alignLeft="@id/task_indicator"
            android:layout_alignStart="@id/task_indicator"
            android:padding="10dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_done_24"
            app:tint="@color/white"
            android:layout_alignEnd="@id/task_indicator" />
    </RelativeLayout>

