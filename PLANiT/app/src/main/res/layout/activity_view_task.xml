<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTaskActivity">

    <include
        android:id="@+id/include_view_toolbar"
        layout="@layout/activity_toolbar_view" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_view_toolbar"
        app:layout_constraintVertical_bias="0.0"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskTitles"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskTitleTextView"
                    android:layout_width="@dimen/view_task_title_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginLeft="@dimen/title_margin"
                    android:layout_marginStart="@dimen/title_margin"
                    android:text="Title title title title title title title title"
                    android:textSize="@dimen/view_title_font_size" />

                <RelativeLayout
                    android:id="@+id/task_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/title_margin"
                    android:layout_marginEnd="@dimen/title_margin"
                    android:layout_marginTop="@dimen/title_margin">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/task_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        app:showAnimationBehavior="inward"
                        android:focusable="true"
                        app:indicatorSize="@dimen/task_indicator_size_large"
                        app:trackColor="@color/custom_secondary_variant" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/task_indicator"
                        android:layout_alignLeft="@id/task_indicator"
                        android:layout_alignTop="@id/task_indicator"
                        android:layout_alignEnd="@id/task_indicator"
                        android:layout_alignRight="@id/task_indicator"
                        android:layout_alignBottom="@id/task_indicator"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_done_24"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/task_indicator_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_indicator"
                        android:layout_alignStart="@id/task_indicator"
                        android:layout_alignLeft="@id/task_indicator"
                        android:text="@string/indicator_hint"
                        android:gravity="center"
                        android:textSize="@dimen/indicator_hint_font_size" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/taskProjectTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskTitles"
                android:layout_marginTop="@dimen/subtitle_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_marginRight="@dimen/title_margin"
                android:text="Project title project title project title project title"
                android:textSize="@dimen/view_subtitle_font_size" />

