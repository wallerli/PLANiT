                android:id="@+id/taskBlockedByTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskDescriptionTextView"
                android:layout_marginTop="@dimen/blocked_by_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_marginRight="@dimen/title_margin"
                android:text="@string/blocked_by"
                android:textSize="@dimen/view_description_font_size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasksRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskBlockedByTextView"
                android:layout_marginBottom="@dimen/title_margin"
                android:overScrollMode="never"/>
        </RelativeLayout>
