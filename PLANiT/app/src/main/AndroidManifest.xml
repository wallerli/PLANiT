<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.morphedstudio.planit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PLANiT">
        <activity android:name="com.morphedstudio.planit.Settings"
                  android:theme="@style/Theme.PLANiT.NoActionBar" />
        <activity
            android:name="com.morphedstudio.planit.EditTaskActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PLANiT.NoActionBar" />
        <activity
            android:name="com.morphedstudio.planit.EditProjectActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PLANiT.NoActionBar" />
        <activity
            android:name="com.morphedstudio.planit.ViewTaskActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PLANiT.NoActionBar" />
        <activity
            android:name="com.morphedstudio.planit.ViewProjectActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PLANiT.NoActionBar" />
        <activity
            android:name="com.morphedstudio.planit.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PLANiT.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action" />
                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.morphedstudio.planit.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>